@model List<Model.EF.User>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var totalPage = Convert.ToInt32(ViewBag.TotalPage);
}
@section breadcrumb {
    <section class="content-header">
        <h4>Quản lý Quản trị viên</h4>
        <ol class="breadcrumb">
            <li><a href="/Admin/Home"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
            <li class="active">Quản lý Admin</li>
        </ol>
    </section>
}
@section jsFooter{
<script src="~/Assets/Admin/customJS/pagination.js"></script>
<script src="~/Assets/Admin/customJS/deleteItem.js"></script>
}
<div class="clearfix"></div>
<section class="content">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title"> Danh sách Quản trị viên</h3>
            <div class="box-tools">
                @using (Html.BeginForm("Index", "AdminManage", FormMethod.Get))
                {
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" id="txtSearch" class="form-control pull-right" value="@ViewBag.Keyword" placeholder="Nhập từ khóa..." name="keyword">

                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- /.box-header -->
        <div class="box-body list-admin no-padding">
            <table class="table">

                <tbody>
                    <tr>
                        <th style="width: 10px">#</th>
                        <th>Admin</th>
                        <th>Tên đăng nhập</th>
                        <th>SĐT</th>
                        <th>Email</th>
                        <th>Trạng thái</th>
                        <th>Action</th>
                    </tr>
                    @for (int i = 0; i < Model.Count(); i++)
                    {
                        var idx = (int)(@ViewBag.Page - 1) * 10 + i + 1;
                        <tr id="row_@Model[i].ID">
                            <td>@idx</td>
                            <td>
                                <div class="row col-lg-12">
                                    <div class="col-lg-3 wrap-avatar">
                                        @if (!string.IsNullOrEmpty(Model[i].Avatar))
                                        {
                                            <img class="img-avatar img-responsive img-circle" src="@Url.Content(Model[i].Avatar)" />
                                        }
                                        else
                                        {
                                            <img class="img-avatar img-responsive img-circle" src='@Url.Content("~/Images/user.png")' />
                                        }

                                    </div>
                                    <div class="col-lg-9">
                                        <span>@Model[i].Name</span>
                                    </div>
                                </div>


                            </td>
                            <td>@Model[i].Username</td>
                            <td>@Model[i].Phone</td>
                            <td>@Model[i].Email</td>
                            <td>@(Model[i].Status == 1 ? "Đang hoạt động" : "Bị khóa")</td>
                            <td>
                                <div class="btn-group">
                                    <a href="/Admin/AdminManage/Edit/@Model[i].ID" class="btn btn-info btn-flat btn-action-first"><i class="fa fa-pencil"></i></a>
                                    <button class="btn btn-info btn-flat btn-action-first btn-delete" data-id="@Model[i].ID" data-name="@Model[i].Username"><i class="fa fa-pencil"></i></button>
                                    @*@Ajax.ActionLink(" ", "Delete", new { @ID = Model[i].ID }, new AjaxOptions
                               {
                                   Confirm = "Bạn chắc chắn muốn xóa thông tin Quản trị viên " + @Model[i].Username + " ?",
                                   OnComplete = "$('#row_" + @Model[i].ID + "').remove()",
                                   HttpMethod = "Delete"
                               },
                               new { @class = "btn btn-danger btn-flat glyphicon glyphicon-trash  btn-action-second" })*@
                                </div>

                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <div class="pull-left">
                <a href="/Admin/AdminManage/Create" class="btn btn-primary">Thêm mới</a>
            </div>
            <div class="pull-right">
                @*@Html.PagedListPager(Model, page => Url.Action("Index",
                    new { page, @keyword = @ViewBag.Keyword }))*@
                @if (totalPage >= 1)
                {
                    var currPage = Convert.ToInt32(ViewBag.Page);
                    var nextPage = 1;
                    var prevPage = 1;
                    if (currPage > 1)
                    {
                        prevPage = currPage - 1;
                    }
                    if(currPage < totalPage)
                    {
                        nextPage = currPage + 1;
                    }
                    <input type="hidden" name="saveCurrPage" id="curr-page" value="@currPage"/>
                    <nav aria-label="Page navigation example">
                        <ul class="pagination">
                            <li class="page-item">
                                <a class="page-link" id="page-link-@prevPage" href="" data-page="@prevPage" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                            @for (int i = 1; i <= totalPage; i++)
                            {
                                if (i == currPage)
                                {
                                    <li class="page-item active"><a class="page-link" id="page-link-@i" href="" data-page="@i">@i</a></li>
                                }
                                else
                                {
                                    <li class="page-item"><a class="page-link" id="page-link-@i" href="" data-page="@i">@i</a></li>
                                }
                            }

                            <li class="page-item">
                                <a class="page-link" href="" id="page-link-@nextPage" data-page="@nextPage" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }

            </div>


        </div>
    </div>

</section>
