@model PagedList.IPagedList<Model.EF.User>
@using PagedList.Mvc
@{
    ViewBag.Title = "Quản lý Khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section jsFooter{
    <script src="~/Assets/Admin/customJS/deleteItem.js"></script>
}
@section breadcrumb {
    <section class="content-header">
        <h4>Quản lý Khách hàng</h4>
        <ol class="breadcrumb">
            <li><a href=""><i class="fa fa-dashboard"></i> Trang chủ</a></li>
            <li class="active">Quản lý Khách hàng</li>
        </ol>
    </section>
}
<div class="clearfix"></div>
<section class="content">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title"> Danh sách Khách hàng</h3>
            <div class="box-tools">
                @using (Html.BeginForm("Index", "Customer", FormMethod.Get))
                {
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" id="txtSearch" class="form-control pull-right" value="@ViewBag.Keyword" placeholder="Nhập từ khóa..." name="keyword">
                    </div>
                }
            </div>
        </div>

        <!-- /.box-header -->
        <div class="box-body no-padding">
            <table class="table">

                <tbody>
                    <tr>
                        <th style="width: 10px">#</th>
                        <th>Họ tên</th>
                        <th>Tên đăng nhập</th>
                        <th>Địa chỉ</th>
                        <th>SĐT</th>
                        <th>Email</th>
                        <th>Trạng thái</th>
                        <th>Action</th>
                    </tr>
                    @for (int i = 0; i < Model.Count(); i++)
                    {
                        var idx = (int)(@ViewBag.Page - 1) * 5 + i + 1;
                        <tr id="row_@Model[i].ID">
                            <td>@idx</td>
                            <td>@Model[i].Name</td>
                            <td>@Model[i].Username</td>
                            <td>@Model[i].Address</td>
                            <td>@Model[i].Phone</td>
                            <td>@Model[i].Email</td>
                            <td>@(Model[i].Status == 1 ? "Đang hoạt động" : "Bị khóa")</td>
                            <td>
                                <div class="btn-group">
                                    <a href="/Admin/Customer/Edit/@Model[i].ID" class="btn btn-info btn-flat btn-action-first"><i class="fa fa-pencil"></i></a>
                                    <button class="btn btn-danger btn-flat btn-action-first btn-delete-customer" data-id="@Model[i].ID" data-name="@Model[i].Name"><i class="fa fa-trash"></i></button>
                                  
                                </div>

                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <div class="pull-left">
                <a href="/Admin/Customer/Create" class="btn btn-primary">Thêm mới</a>
            </div>
            <div class="pull-right">
                @Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, @keyword = @ViewBag.Keyword }))
            </div>


        </div>
    </div>

</section>
