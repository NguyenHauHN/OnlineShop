
@model OnlineShop.Common.UserLogin
<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                @if (Model.Avatar != null)
                {
                    <img src="@Url.Content(Model.Avatar)" class="img-circle" alt="User Image">
                }
                else
                {
                    <img src=@Url.Content("~/Images/user.png") class="img-circle" alt="User Image">
                }
            </div>
            <div class="pull-left info">
                <p>@Model.Name</p>
                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>
        
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu">
            <li class="header">MAIN NAVIGATION</li>
            <li class="treeview">
                <a href="/Admin/AdminManage">
                    <i class="fa fa-dashboard"></i> <span>Quản lý Admin</span>
                </a>
            </li>
            <li class="treeview">
                <a href="/Admin/Product">
                    <i class="fa fa-product-hunt"></i> <span>Quản lý Sản phẩm</span>
                </a>
            </li>
            <li class="treeview">
                <a href="/Admin/Category">
                    <i class="fa fa-list-alt"></i> <span>Quản lý Danh mục</span>
                </a>
            </li>
            <li class="treeview">
                <a href="/Admin/Order">
                    <i class="fa fa-cart-arrow-down"></i> <span>Quản lý Đơn hàng</span>
                </a>
            </li>
        </ul>
    </section>
    <!-- /.sidebar -->
</aside>
