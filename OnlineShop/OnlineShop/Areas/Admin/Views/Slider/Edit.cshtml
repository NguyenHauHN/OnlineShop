@model Model.EF.Slide
@{
    ViewBag.Title = "Cập nhật thông tin slide - OnlineShop";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var urlImage = Url.Content(ViewBag.srcImgEdit);
}

section breadcrumb {
<section class="content-header">
    <h4>Quản lý Slider</h4>
    <ol class="breadcrumb">
        <li><a href="/Admin/Home"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
        <li><a href="/Admin/Slider/Index">Quản lý Slider</a></li>
        <li class="active">Cập nhật</li>
    </ol>
</section>
}
<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Thông tin Slider</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <div class="box-body ">
            <div class="row col-lg-12">
                <div class="col-lg-3">
                    <div class="wrap-image">
                        <img class="img-responsive img-thumbnail avatar" src="@urlImage" />
                    </div>
                    @using (Html.BeginForm("UploadImageEdit", "Slider", new { ID = Model.ID }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {

                        <div class="wrap-button-upload">
                            <input type="file" id="imageUpload" accept="image/*" name="file" class="hide" />
                            <label for="imageUpload" class="button-style btn btn-primary">Chọn ảnh</label>

                            <button type="submit" class="btn btn-success">Upload ảnh</button>
                        </div>
                    }
                </div>
                <div class="col-lg-9">
                    @using (Html.BeginForm("Edit", "Slider", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="row col-lg-12">
                            <fieldset>
                                <div class="form-group">
                                    <label>Tiêu đề</label>
                                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tiêu đề", @autofocus = "autofocus" } })
                                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label>Mô tả</label>
                                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @placeholder = "Mô tả" } })
                                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label>Thứ tự</label>
                                    @Html.EditorFor(model => model.DisplayOrder, new { htmlAttributes = new { @class = "form-control", @placeholder = "Thứ tự hiển thị", @type = "number" } })
                                    @Html.ValidationMessageFor(model => model.DisplayOrder, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label>Trạng thái</label>
                                    <div class="row col-lg-12">
                                        <div class="radio col-lg-3">
                                            @Html.RadioButtonFor(model => model.Status, "1", new { @checked = true })
                                            @Html.Label("Đang hoạt động")

                                        </div>
                                        <div class="radio col-lg-2 radio-second">
                                            @Html.RadioButtonFor(model => model.Status, "0", false)
                                            @Html.Label("Bị khóa")
                                        </div>
                                    </div>

                                </div>

                            </fieldset>

                        </div>
                        <div class="row wrap-button-add">
                            <button type="submit" class="btn btn-primary pull-right">Cập nhật</button>
                        </div>
                    }
                </div>

            </div>

        </div>


        <!-- /.box-body -->


    </div>
</section>

