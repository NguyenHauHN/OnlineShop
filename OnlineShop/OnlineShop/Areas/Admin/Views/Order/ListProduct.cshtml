@model PagedList.IPagedList<Model.ViewModels.OrderProductViewModel>
@using PagedList.Mvc
@{
    ViewBag.Title = "ListProduct";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section breadcrumb {
<section class="content-header">
    <h4>Quản lý Đơn hàng</h4>
    <ol class="breadcrumb">
        <li><a href=""><i class="fa fa-dashboard"></i> Trang chủ</a></li>
        <li><a href="/Admin/Order/Index">Quản lý Đơn hàng</a></li>
        <li><a href="/Admin/Order/Edit/@ViewBag.OrderID">Chi tiết đơn hàng</a></li>
        <li class="active">Danh sách sản phẩm</li>
    </ol>
</section>
}
<div class="clearfix"></div>
<section class="content">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title"> Danh sách Sản phẩm</h3>
            <div class="box-tools">
                @using (Html.BeginForm("ListProduct", "Order", FormMethod.Get))
                {
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" id="txtSearch" class="form-control pull-right" value="@ViewBag.Keyword" placeholder="Nhập từ khóa..." name="keyword">

                    </div>
                }
            </div>
        </div>

        <!-- /.box-header -->
        <div class="box-body no-padding">
            <table class="table table-bordered">

                <tbody>
                    <tr>
                        <th style="width: 10px">#</th>
                        <th>Sản phẩm</th>
                        <th>Giá</th>
                        <th>Sale(%)</th>
                        <th>Số lượng</th>
                        <th>Thành tiền</th>
                    </tr>
                    @for (int i = 0; i < Model.Count(); i++)
                    {
                        var idx = (int)(@ViewBag.Page - 1) * 5 + i + 1;
                        <tr id="row_@Model[i].ID">
                            <td>@idx</td>
                            <td>
                                <div class="row col-lg-12">
                                    <div class="col-lg-3 wrap-avatar">
                                        @if (!string.IsNullOrEmpty(Model[i].MainImage))
                                        {
                                            <img src="@Url.Content(Model[i].MainImage)" class="avatar-product img-responsive img-thumbnail" />
                                        }
                                        else
                                        {
                                            @*<img src="@Url.Content(Model[i].MainImage)" class="avatar-product img-responsive img-thumbnail" />*@
                                        }

                                    </div>
                                    <div class="col-lg-9">
                                        <span>@Model[i].ProductName</span>
                                    </div>
                                </div>


                            </td>
                            <td>@Model[i].Price</td>
                            <td>@Model[i].Sale.ToString()%</td>
                            <td>@Model[i].Amount</td>
                            <td>@Model[i].TotalMoney</td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <div class="pull-right">
                @Html.PagedListPager(Model, page => Url.Action("ListProduct",
    new { page, @keyword = @ViewBag.Keyword }))
            </div>


        </div>
    </div>

</section>

