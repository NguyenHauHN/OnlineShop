@model Model.EF.Order
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section breadcrumb {
    <section class="content-header">
        <h4>Quản lý Đơn hàng</h4>
        <ol class="breadcrumb">
            <li><a href=""><i class="fa fa-dashboard"></i> Trang chủ</a></li>
            <li><a href="/Admin/Order/Index">Quản lý Đơn hàng</a></li>
            <li class="active">Thêm mới</li>
        </ol>
    </section>
}

<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Thông tin Đơn hàng mới</h3>
        </div>
        @using (Html.BeginForm("Create", "Order", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="box-body ">
                <div class="row col-lg-12">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label>Họ tên khách hàng</label>
                            @Html.EditorFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Họ tên khách hàng", @autofocus = "autofocus" } })
                            @Html.ValidationMessageFor(model => model.CustomerName, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label>Địa chỉ</label>
                            @Html.EditorFor(model => model.CustomerAddress, new { htmlAttributes = new { @class = "form-control", @placeholder = "Địa chỉ" } })
                            @Html.ValidationMessageFor(model => model.CustomerAddress, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label>Số điện thoại</label>
                            @Html.EditorFor(model => model.CustomerPhone, new { htmlAttributes = new { @class = "form-control", @placeholder = "Số điện thoại" } })
                            @Html.ValidationMessageFor(model => model.CustomerPhone, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            @Html.EditorFor(model => model.CustomerEmail, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email", @type = "email" } })
                            @Html.ValidationMessageFor(model => model.CustomerEmail, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row col-lg-12">
                    <div class="box box-widget wrap-table-product-order">
                        <div class="box-header with-border">
                            <div class="user-block">
                                <h4>Danh sách sản phẩm</h4>
                            </div>
                            <!-- /.user-block -->
                            <div class="box-tools">
                                
                            </div>
                            <!-- /.box-tools -->
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            <img class="img-responsive pad" src="../dist/img/photo2.png" alt="Photo">

                            <p>I took this photo this morning. What do you guys think?</p>
                            <button type="button" class="btn btn-default btn-xs"><i class="fa fa-share"></i> Share</button>
                            <button type="button" class="btn btn-default btn-xs"><i class="fa fa-thumbs-o-up"></i> Like</button>
                            <span class="pull-right text-muted">127 likes - 3 comments</span>
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer box-comments">
                            @*<table class="table">

                                <tbody>
                                    <tr>
                                        <th style="width: 10px">#</th>
                                        <th>Admin</th>
                                        <th>Tên đăng nhập</th>
                                        <th>SĐT</th>
                                        <th>Email</th>
                                        <th>Trạng thái</th>
                                        <th>Action</th>
                                    </tr>
                                    @for (int i = 0; i < Model.Count(); i++)
                                    {
                                        var idx = (int)(@ViewBag.Page - 1) * 10 + i + 1;
                                        <tr id="row_@Model[i].ID">
                                            <td>@idx</td>
                                            <td>
                                                <div class="row col-lg-12">
                                                    <div class="col-lg-3 wrap-avatar">
                                                        @if (!string.IsNullOrEmpty(Model[i].Avatar))
                                                        {
                                                            <img class="img-avatar img-responsive img-circle" src="@Url.Content(Model[i].Avatar)" />
                                                        }
                                                        else
                                                        {
                                                            <img class="img-avatar img-responsive img-circle" src='@Url.Content("~/Images/user.png")' />
                                                        }

                                                    </div>
                                                    <div class="col-lg-9">
                                                        <span>@Model[i].Name</span>
                                                    </div>
                                                </div>


                                            </td>
                                            <td>@Model[i].Username</td>
                                            <td>@Model[i].Phone</td>
                                            <td>@Model[i].Email</td>
                                            <td>@(Model[i].Status == 1 ? "Đang hoạt động" : "Bị khóa")</td>
                                            <td>
                                                <div class="btn-group">
                                                    <a href="/Admin/AdminManage/Edit/@Model[i].ID" class="btn btn-info btn-flat btn-action-first"><i class="fa fa-pencil"></i></a>
                                                    @Ajax.ActionLink(" ", "Delete", new { @ID = Model[i].ID }, new AjaxOptions
                               {
                                   Confirm = "Bạn chắc chắn muốn xóa thông tin Quản trị viên " + @Model[i].Username + " ?",
                                   OnComplete = "$('#row_" + @Model[i].ID + "').remove()",
                                   HttpMethod = "Delete"
                               },
                               new { @class = "btn btn-danger btn-flat glyphicon glyphicon-trash  btn-action-second" })
                                                </div>

                                            </td>
                                        </tr>
                                    }


                                </tbody>
                            </table>*@
                        </div>
                        <!-- /.box-footer -->
                        <div class="box-footer">
                            @*<div class="pull-right">
                                @Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, @keyword = @ViewBag.Keyword }))
                            </div>*@
                        </div>
                        <!-- /.box-footer -->
                    </div>
                </div>

                @if (TempData["CreateError"] != null)
                {
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <h4><i class="icon fa fa-warning"></i> Thông báo!</h4>
                        @TempData["CreateError"]
                    </div>
                }
            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-primary pull-right">Thêm mới</button>
            </div>



        }
</section>
