@model Model.EF.Product
@{
    ViewBag.Title = "Cập nhật thông tin sản phẩm - OnlineShop";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    //var urlImage = Url.Content(ViewBag.srcImgEdit);
}

@section breadcrumb {
    <section class="content-header">
        <h4>Quản lý Sản phẩm</h4>
        <ol class="breadcrumb">
            <li><a href="/"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
            <li><a href="/Admin/Product/Index">Quản lý Sản phẩm</a></li>
            <li class="active">Cập nhật</li>
        </ol>
    </section>
}
@section jsFooter{

    <script type="text/javascript">
        $("#imageUploadedit").change(function () {

            var fileName = "~/Images/" + $(this).val().split('/').pop().split('\\').pop();

            if ($(this).val().length > 0) {

                var data = new FormData();
                var files = $("#imageUploadedit").get(0).files;

                if (files.length > 0) { data.append("HelpSectionImages", files[0]); }
                $.ajax({
                    url: "/Admin/Product/UploadImageGalleryImage/",
                    type: "POST",
                    processData: false,
                    data: data,
                    dataType: "json",
                    contentType: false,
                    success: function (response) {
                        $("#avatar-product").attr("src", response.name);
                        $('#saveSrcMainImg').val(response.name);
                    },
                    error: function () {
                        alert('error');
                    }
                });
            }


        });

    </script>

}
<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Thông tin Sản phẩm</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <div class="box-body ">
            <div class="row col-lg-12">
                <div class="col-lg-3">
                    <div class="wrap-image">
                      
                        <img class="img-responsive img-thumbnail avatar" id="avatar-product" src="@Url.Content(Model.MainImage)" />
                    </div>

                    <div class="wrap-button-upload">
                        <input type="file" id="imageUploadedit" accept="image/*" name="file" class="hide" />
                        <label for="imageUploadedit" class="button-style btn btn-primary">Chọn ảnh</label>
                        <a href="/Admin/Product/UpdateGalleryImage/@Model.ID" class="btn btn-info" id="btnUpdateGallery">Ảnh mô tả</a>
                    </div>
                </div>
                <div class="col-lg-9">
                    @using (Html.BeginForm("Edit", "Product",  FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="row">
                            <input type="hidden" id="saveSrcMainImg" value="" name="saveMainImg"/>
                            <fieldset>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Mã sản phẩm</label>
                                        @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control", @placeholder = "Mã sản phẩm", @autofocus = "autofocus" } })
                                        @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label>Tên sản phẩm</label>
                                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tên sản phẩm", @autofocus = "autofocus" } })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label>Meta Title</label>
                                        @Html.EditorFor(model => model.MetaTitle, new { htmlAttributes = new { @class = "form-control", @placeholder = "MetaTitle" } })
                                        @Html.ValidationMessageFor(model => model.MetaTitle, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label>Mô tả</label>
                                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @placeholder = "Mô tả" } })
                                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Giá</label>
                                        @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", @placeholder = "Mô tả", @type = "number" } })
                                        @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label>Khuyến mãi (%)</label>
                                        @Html.EditorFor(model => model.Sale, new { htmlAttributes = new { @class = "form-control", @placeholder = "Khuyến mãi" } })
                                        @Html.ValidationMessageFor(model => model.Sale, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label>Tag</label>
                                        @Html.EditorFor(model => model.Tag, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tag" } })
                                        @Html.ValidationMessageFor(model => model.Tag, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </fieldset>

                        </div>
                        <div class="row wrap-button-add">
                            <button type="submit" class="btn btn-primary pull-right">Cập nhật</button>
                        </div>
                    }
                </div>

            </div>

        </div>


        <!-- /.box-body -->


    </div>
</section>

