
@{
    ViewBag.Title = "UpdateGalleryImage";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section jsFooter{

    <script src="~/Assets/Admin/customJS/uploadImage.js"></script>
}
<section class="content">
    <div class="box box-success">
        <div class="box-header ui-sortable-handle" style="cursor: move;">
            <h4>Chọn các ảnh mô tả cho sản phẩm</h4>
        </div>
        <div class="box-body " style="overflow: hidden; width: auto; height: 250px;">
            <div id="image-list">

            </div>
            <div class="wrap-button-upload">
                <input type="file" id="inputUploadGallery" accept="image/*" name="fileGallery" class="hide" />
                <label for="inputUploadGallery" class="button-style btn btn-primary">Chọn ảnh</label>

                <input type="hidden" id="hideInputProduct" value="@ViewBag.ProductID" />
            </div>

        </div>
        <!-- /.chat -->
        <div class="box-footer">
            <button type="button" class="btn btn-success" id="btn-save-image">Lưu</button>
            <a href="/Admin/Product/Edit/@ViewBag.ProductID" class="btn btn-success">Quay lại</a>
        </div>
    </div>
</section>

