@model PagedList.IPagedList<Model.EF.Product>
@using PagedList.Mvc
@{
    ViewBag.Title = "Quản lý Sản phẩm - OnlineShop";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section breadcrumb {
    <section class="content-header">
        <h4>Quản lý Sản phẩm</h4>
        <ol class="breadcrumb">
            <li><a href="/Admin/Home"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
            <li class="active">Quản lý Sản phẩm</li>
        </ol>
    </section>
}
@section jsFooter{
    <script src="/Scripts/Custom/uploadGalleryImage.js"></script>
}
<div class="clearfix"></div>
<section class="content">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title"> Danh sách Sản phẩm</h3>
            <div class="box-tools">
                @using (Html.BeginForm("Index", "Product", FormMethod.Get))
                {
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" id="txtSearch" class="form-control pull-right" value="@ViewBag.Keyword" placeholder="Nhập từ khóa..." name="keyword">

                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- /.box-header -->
        <div class="box-body no-padding">
            <table class="table table-bordered">

                <tbody>
                    <tr>
                        <th style="width: 10px">#</th>
                        <th>Mã</th>
                        <th>Sản phẩm</th>
                        <th>Giá</th>
                        <th>Sale(%)</th>
                        <th>Trạng thái</th>
                        <th>Action</th>
                    </tr>
                    @for (int i = 0; i < Model.Count(); i++)
                    {
                        var idx = (int)(@ViewBag.Page - 1) * 5 + i + 1;
                        <tr id="row_@Model[i].ID">
                            <td>@idx</td>
                            <td>@Model[i].Code</td>
                            <td>
                                <div class="row col-lg-12">
                                    <div class="col-lg-3 wrap-avatar">
                                        @if (!string.IsNullOrEmpty(Model[i].MainImage))
                                        {
                                            <img src="@Url.Content(Model[i].MainImage)" class="avatar-product img-responsive img-thumbnail" />
                                        }
                                        else
                                        {
                                            @*<img src="@Url.Content(Model[i].MainImage)" class="avatar-product img-responsive img-thumbnail" />*@
                                        }

                                    </div>
                                    <div class="col-lg-9">
                                        <span>@Model[i].Name</span>
                                    </div>
                                </div>


                            </td>
                            <td>@Model[i].Price</td>
                            <td>@Model[i].Sale.ToString()%</td>
                            <td>@(Model[i].Status == 1 ? "Đang bán" : "Hết hàng")</td>
                            <td>
                                <div class="btn-group">
                                    <a href="/Admin/Product/Edit/@Model[i].ID" class="btn btn-info btn-flat btn-action-first"><i class="fa fa-pencil"></i></a>
                                    @Ajax.ActionLink(" ", "Delete", new { @ID = Model[i].ID }, new AjaxOptions
                               {
                                   Confirm = "Bạn chắc chắn muốn xóa thông tin sản phẩm " + @Model[i].Name + " ?",
                                   OnComplete = "$('#row_" + @Model[i].ID + "').remove()",
                                   HttpMethod = "Delete"
                               },
                               new { @class = "btn btn-danger btn-flat glyphicon glyphicon-trash  btn-action-second" })
                                </div>

                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <div class="pull-left">
                <a href="/Admin/Product/Create" class="btn btn-primary">Thêm mới</a>
            </div>
            <div class="pull-right">
                @Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, @keyword = @ViewBag.Keyword }))
            </div>


        </div>
    </div>

</section>

