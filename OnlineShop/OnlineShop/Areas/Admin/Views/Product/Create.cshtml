@model Model.EF.Product

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var listCategory = (List<Model.EF.Category>)ViewBag.ListCategory;
}
@section breadcrumb {
    <section class="content-header">
        <h4>Quản lý Sản phẩm</h4>
        <ol class="breadcrumb">
            <li><a href="/Admin/Home"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
            <li><a href="/Admin/Product/Index">Quản lý Sản phẩm</a></li>
            <li class="active">Thêm mới</li>
        </ol>
    </section>
}
@section jsFooter{
    <script src="~/Assets/Admin/customJS/uploadImage.js"></script>
}
<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Thông tin Sản phẩm mới</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        @using (Html.BeginForm("Create", "Product", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            <div class="box-body ">
                <div class="row col-lg-12">
                    <div class="col-lg-3 wrap-image-product">
                        <div class="wrap-image">
                            <img class="img-responsive img-thumbnail avatar" src=@Url.Content("~/Images/plus.png") />
                        </div>

                        <div class="wrap-button-upload">
                            <input type="file" id="imageUploadProduct" accept="image/*" name="file" class="hide" />
                            <label for="imageUploadProduct" class="button-style btn btn-primary">Ảnh đại diện</label>

                            <button type="button" class="btn btn-info" id="btnUploadGallery">Ảnh mô tả</button>

                        </div>

                    </div>
                    <div class="col-lg-9">

                        <div class="row">
                            <input type="hidden" name="mainImageProduct" value="" id="saveMainImageProduct" />
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Tên sản phẩm</label>
                                    <div class="">
                                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tên sản phẩm" } })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>Meta Title</label>
                                    <div class="">
                                        @Html.EditorFor(model => model.MetaTitle, new { htmlAttributes = new { @class = "form-control", @placeholder = "Meta Title" } })
                                        @Html.ValidationMessageFor(model => model.MetaTitle, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Mô tả</label>
                                    <div class="">
                                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @placeholder = "Mô tả" } })
                                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Tag</label>
                                    <div class="">
                                        @Html.EditorFor(model => model.Tag, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tag" } })
                                        @Html.ValidationMessageFor(model => model.Tag, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Đơn giá</label>
                                    <div class="">
                                        @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", @placeholder = "Đơn giá" } })
                                        @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>Khuyến mãi(%)</label>
                                    <div class="">
                                        @Html.EditorFor(model => model.Sale, new { htmlAttributes = new { @class = "form-control", @placeholder = "Khuyến mãi(%)" } })
                                        @Html.ValidationMessageFor(model => model.Sale, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>Số lượng</label>
                                    <div class="">
                                        @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control", @placeholder = "Số lượng" } })
                                        @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>Danh mục</label>
                                    @Html.DropDownListFor(model => model.CategoryID, new SelectList(listCategory,
           "ID", "Name"), new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>


                    </div>
                </div>
                <div class="clearfix"></div>
                @if (TempData["CreateError"] != null)
                {
                    <div class="center-block" style="width: 50%;">
                        <div class="alert alert-danger alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                            <h4><i class="icon fa fa-warning"></i> Thông báo!</h4>
                            @TempData["CreateError"]
                        </div>
                    </div>

                }

            </div>
            <div class="box-footer">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Thêm mới" class="btn btn-primary pull-right" />
                    </div>
                </div>
            </div>
        }

    </div>
</section>
<!-- Modal -->
<div id="uploadGalleryImage" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Upload ảnh mô tả sản phẩm</h4>
            </div>
            <div class="modal-body" style="min-height:150px;">
                <div id="image-list">

                </div>

            </div>
            <div class="modal-footer">

                <button type="button" class="btn btn-success pull-right" id="btn-save-image">Lưu</button>
                <div class="wrap-button-upload pull-right">
                    <input type="file" id="inputUploadGallery" accept="image/*" name="fileGallery" class="hide" />
                    <label for="inputUploadGallery" class="button-style btn btn-primary">Chọn ảnh</label>
                </div>
            </div>
        </div>

    </div>
</div>
