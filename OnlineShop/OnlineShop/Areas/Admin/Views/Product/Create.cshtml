@model Model.EF.Product

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section breadcrumb {
    <section class="content-header">
        <h4>Quản lý Sản phẩm</h4>
        <ol class="breadcrumb">
            <li><a href="/Admin/Home"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
            <li><a href="/Admin/Product/Index">Quản lý Sản phẩm</a></li>
            <li class="active">Thêm mới</li>
        </ol>
    </section>
}
@section jsFooter{

    <script type="text/javascript">

        $("#imageUploadProduct").change(function () {
            var fileName = "~/Images/" + $(this).val().split('/').pop().split('\\').pop();
            if ($(this).val().length > 0) {
                alert($(this).val());
                $('#btnUploadProduct').click();
            }


        });

    </script>
}
<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Thông tin Sản phẩm mới</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <div class="box-body ">
            <div class="row col-lg-12">
                <div class="col-lg-3">
                    @*<div class="wrap-image">
                        <img class="img-responsive img-thumbnail avatar" src="@urlImage" />
                    </div>*@
                    @using (Html.BeginForm("UploadImageMainImage", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {

                        <div class="wrap-button-upload">
                            <input type="file" id="imageUploadProduct" accept="image/*" name="file" class="hide" />
                            <label for="imageUploadProduct" class="button-style btn btn-primary">Ảnh đại diện</label>

                            <a href="/Admin/Product/UploadGalleryImage" class="btn btn-info" id="btnUploadGallery">Ảnh mô tả</a>

                            <button type="submit" class="btn btn-success hide" id="btnUploadProduct">Upload ảnh</button>
                        </div>
                    }
                </div>
                <div class="col-lg-9">
                    @using (Html.BeginForm("Create", "Product", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Tên sản phẩm</label>
                                        <div class="">
                                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder="Tên sản phẩm" } })
                                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label>Meta Title</label>
                                        <div class="">
                                            @Html.EditorFor(model => model.MetaTitle, new { htmlAttributes = new { @class = "form-control", @placeholder = "Meta Title" } })
                                            @Html.ValidationMessageFor(model => model.MetaTitle, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Mô tả</label>
                                        <div class="">
                                            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @placeholder = "Mô tả" } })
                                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Tag</label>
                                        <div class="">
                                            @Html.EditorFor(model => model.Tag, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tag" } })
                                            @Html.ValidationMessageFor(model => model.Tag, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Đơn giá</label>
                                        <div class="">
                                            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", @placeholder = "Đơn giá" } })
                                            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label>Khuyến mãi(%)</label>
                                        <div class="">
                                            @Html.EditorFor(model => model.Sale, new { htmlAttributes = new { @class = "form-control", @placeholder = "Khuyến mãi(%)" } })
                                            @Html.ValidationMessageFor(model => model.Sale, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label>Số lượng</label>
                                        <div class="">
                                            <input type="number" class="form-control" placeholder="Số lượng" name="amountProduct" id="amoun-product" value="" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Trạng thái</label>
                                        <div class="row col-lg-12">
                                            <div class="radio col-lg-5">
                                                @Html.RadioButtonFor(model => model.Status, "1", new { @checked = true })
                                                @Html.Label("Hoạt động")

                                            </div>
                                            <div class="radio col-lg-5 radio-second">
                                                @Html.RadioButtonFor(model => model.Status, "0", false)
                                                @Html.Label("Ẩn")
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Create" class="btn btn-default pull-right" />
                                </div>
                            </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

