@{
    Layout = null;
}
@model  Model.EF.User
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>ResetPassword - Admin - OnlineShop</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.6 -->
    <link rel="stylesheet" href="/Assets/Admin/bootstrap/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/Assets/Admin/fontawesome/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="/Assets/Admin/ionicon/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/Assets/Admin/dist/css/AdminLTE.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="/Assets/Admin/plugins/iCheck/square/blue.css">
</head>
<body class="hold-transition register-page">
    <div class="register-box">
        <div class="register-logo">
            <a href="../../index2.html"><b>ZORKA</b> SHOP</a>
        </div>
        <!-- /.login-logo -->
        <div class="register-box-body">
            <p class="register-box-msg">Nhập các thông tin</p>
            @using (Html.BeginForm("ResetPassword", "ResetPassword", FormMethod.Post))
            {
                @Html.ValidationSummary(true, "", new { @class = "text text-danger" })
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @placeholder = "Username", @autofocus = "autofocus" })
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text text-danger" })
                </div>
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Email" })
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text text-danger" })
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Mật khẩu mới" name="newPassword">
                    <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Nhập lại mật khẩu mới" name="reNewPassword">
                    <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
                </div>
                if (TempData["ErrorReset"] != null)
                {
                    <div class="row">
                        <p class="text-center text-danger">@TempData["ErrorReset"]</p>
                    </div>
                }

                if (TempData["Success"] != null)
                {
                    <div class="row">
                        <p class="text-center text-success">@TempData["Success"]</p>
                    </div>
                }
                <a href="/Admin/Login/Index">Đăng nhập</a><br>
                <div class="row">
                    <div class="col-xs-7">

                    </div>
                    <!-- /.col -->
                    <div class="col-xs-5">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Lưu thay đổi</button>
                    </div>
                    <!-- /.col -->
                </div>
            }

        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery 2.2.3 -->
    <script src="/Assets/Admin/plugins/jQuery/jquery-2.2.3.min.js"></script>
    <!-- Bootstrap 3.3.6 -->
    <script src="/Assets/Admin/bootstrap/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="/Assets/Admin/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
</body>
</html>
