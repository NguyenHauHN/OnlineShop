@model Model.ViewModels.ProductDisplay
@{
    ViewBag.Title = "Cập nhật thông tin sản phẩm - OnlineShop";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var urlImage = Url.Content(ViewBag.srcImgEdit);
}

@section breadcrumb {
    <section class="content-header">
        <h4>Quản lý Sản phẩm</h4>
        <ol class="breadcrumb">
            <li><a href="/"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
            <li><a href="/Admin/Product/Index">Quản lý Sản phẩm</a></li>
            <li class="active">Cập nhật</li>
        </ol>
    </section>
}
<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Thông tin Sản phẩm</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <div class="box-body ">
            <div class="row col-lg-12">
                <div class="col-lg-3">
                    <div class="wrap-image">
                        <img class="img-responsive img-thumbnail avatar" src="@urlImage" />
                    </div>
                    @using (Html.BeginForm("UploadSingleImageEdit", "Product", new { productID = Model.Product.ID }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {

                        <div class="wrap-button-upload">
                            <input type="file" id="imageUpload" accept="image/*" name="file" class="hide" />
                            <label for="imageUpload" class="button-style btn btn-primary">Chọn ảnh</label>

                            <button type="submit" class="btn btn-success">Upload ảnh</button>
                        </div>
                    }
                </div>
                <div class="col-lg-9">
                    @using (Html.BeginForm("Edit", "Product", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="row">

                            <fieldset>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Mã sản phẩm</label>
                                        @Html.EditorFor(model => model.Product.Code, new { htmlAttributes = new { @class = "form-control", @placeholder = "Mã sản phẩm", @autofocus = "autofocus" } })
                                        @Html.ValidationMessageFor(model => model.Product.Code, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label>Tên sản phẩm</label>
                                        @Html.EditorFor(model => model.Product.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tên sản phẩm", @autofocus = "autofocus" } })
                                        @Html.ValidationMessageFor(model => model.Product.Name, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label>Meta Title</label>
                                        @Html.EditorFor(model => model.Product.MetaTitle, new { htmlAttributes = new { @class = "form-control", @placeholder = "MetaTitle" } })
                                        @Html.ValidationMessageFor(model => model.Product.MetaTitle, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label>Mô tả</label>
                                        @Html.EditorFor(model => model.Product.Description, new { htmlAttributes = new { @class = "form-control", @placeholder = "Mô tả" } })
                                        @Html.ValidationMessageFor(model => model.Product.Description, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Giá</label>
                                        @Html.EditorFor(model => model.Product.Price, new { htmlAttributes = new { @class = "form-control", @placeholder = "Mô tả", @type = "number" } })
                                        @Html.ValidationMessageFor(model => model.Product.Price, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label>Khuyến mãi (%)</label>
                                        @Html.EditorFor(model => model.Product.Sale, new { htmlAttributes = new { @class = "form-control", @placeholder = "Khuyến mãi" } })
                                        @Html.ValidationMessageFor(model => model.Product.Sale, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label>Tag</label>
                                        @Html.EditorFor(model => model.Product.Tag, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tag" } })
                                        @Html.ValidationMessageFor(model => model.Product.Tag, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </fieldset>

                        </div>
                        <div class="row wrap-button-add">
                            <button type="submit" class="btn btn-primary pull-right">Cập nhật</button>
                        </div>
                    }
                </div>

            </div>

        </div>


        <!-- /.box-body -->


    </div>
</section>

