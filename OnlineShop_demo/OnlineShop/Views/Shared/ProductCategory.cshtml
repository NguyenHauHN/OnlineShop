@model List<Models.EF.ProductCategory>
<div class="categories">
    <ul>
        <h3>Danh mục sản phẩm</h3>
        @foreach (var item in Model)
        {
            if (item.ParentID == null)
            {
                <li class="dropdown">
                    <a href="/san-pham/@item.MetaTitle-@item.ID" class="dropdown-toggle" data-toggle="dropdown">@item.Name</a>
                    <ul class="dropdown-menu">
                        <li><a>Item 1</a></li>
                        <li><a>Item 2</a></li>
                        <li><a>Item 3</a></li>
                    </ul>
                </li>
            }
            else
            {
                <li>
                    <a href="/san-pham/@item.MetaTitle-@item.ID">@item.Name</a>
                  
                </li>
            }
        }
        
        
    </ul>
</div>

